template
    .uk-card(ref="card")
        .uk-card-header(show.bind="header")
            slot(name="header")
            h3.uk-card-title(if.bind="title") ${title}
        h3.uk-card-title(if.bind="title && !header") ${title}
        slot
        .uk-card-footer(show.bind="footer")
            slot(name="footer")